<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ysbook">

	<!-- 즐겨찾기 리스트 불러오기 -->
	<select id="selectList" resultType="com.javaex.vo.AddressVo">
	<![CDATA[
		select aNo
			  ,name
		from address
		where favorite=1
	]]>
	</select>
	
	<!-- 수정폼- 한사람 정보 가져오기 -->
	<select id="selectOneByaNo" parameterType="int" resultType="com.javaex.vo.AddressVo">
	<![CDATA[
		select aNo
			  ,name
		      ,hp
		      ,gender
		      ,email
		      ,memo
		from address
		where aNo=#{aNo}
	]]>
	</select>

</mapper>